<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Solid color for the circle -->
    <solid android:color="@android:color/white" />

    <!-- Define the size of the circle -->
    <size
        android:width="50dp"
        android:height="50dp" />

    <!-- Optional: Set padding if needed -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

</shape>
